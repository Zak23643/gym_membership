<odoo>
    <data noupdate="1">
        <!--
            Scheduled Action to automatically check for and expire memberships daily.
        -->
        <record id="ir_cron_check_expired_memberships" model="ir.cron">
            <field name="name">Gym: Check for Expired Memberships</field>
            <field name="model_id" ref="model_gym_member_membership"/>
            <field name="state">code</field>
            <field name="code">model._check_expired_memberships()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
<!--            <field name="numbercall">-1</field>-->
<!--            <field name="doall" eval="False"/>-->
        </record>
    </data>
</odoo>
