<odoo>
    <data>

        <!-- list/List View for Membership Plans -->
        <record id="view_gym_membership_plan_tree" model="ir.ui.view">
            <field name="name">gym.membership.plan.list</field>
            <field name="model">gym.membership.plan</field>
            <field name="arch" type="xml">
                <list string="Membership Plans">
                    <field name="name"/>
                    <field name="duration_value"/>
                    <field name="duration_unit"/>
                    <field name="price" widget="monetary"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Form View for Membership Plans -->
        <record id="view_gym_membership_plan_form" model="ir.ui.view">
            <field name="name">gym.membership.plan.form</field>
            <field name="model">gym.membership.plan</field>
            <field name="arch" type="xml">
                <form string="Membership Plan">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="e.g., Gold Tier - Monthly"/></h1>
                        </div>
                        <group>
                            <group>
                                <label for="duration_value" string="Duration"/>
                                <div class="o_row">
                                    <field name="duration_value"/>
                                    <field name="duration_unit"/>
                                </div>
                                <field name="price" widget="monetary"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" placeholder="Describe the benefits of this plan..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action to open Membership Plan views -->
        <record id="action_gym_membership_plan" model="ir.actions.act_window">
            <field name="name">Membership Plans</field>
            <field name="res_model">gym.membership.plan</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new membership plan
                </p><p>
                    Define the different types of memberships you offer, like 'Monthly', 'Annual', or 'Student Pass'.
                </p>
            </field>
        </record>

    </data>
</odoo>
